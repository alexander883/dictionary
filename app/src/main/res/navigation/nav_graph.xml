<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">
    <fragment
        android:id="@+id/addWordFragment"
        android:name="com.example.youwords.addword.AddWordFragment"
        android:label="fragment_addword"
        tools:layout="@layout/fragment_addword" >
        <action
            android:id="@+id/action_addWordFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.youwords.start.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_addWordFragment"
            app:destination="@id/addWordFragment" />
        <action
            android:id="@+id/action_startFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_startFragment_to_wordsReadFragment"
            app:destination="@id/wordsReadFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.youwords.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_foundFragment"
            app:destination="@id/foundFragment" />
    </fragment>
    <fragment
        android:id="@+id/foundFragment"
        android:name="com.example.youwords.found.FoundFragment"
        android:label="fragment_found"
        tools:layout="@layout/fragment_found" />
    <fragment
        android:id="@+id/wordsReadFragment"
        android:name="com.example.youwords.words.WordsReadFragment"
        android:label="WordsReadFragment" />
</navigation>